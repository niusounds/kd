{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "Kotlin",
      "matchPackagePrefixes": [
        "org.jetbrains.kotlin",
        "composeOptions"
      ]
    },
    {
      "groupName": "Other Dependencies",
      "matchPackagePatterns": [
        ".*"
      ],
      "excludePackagePrefixes": [
        "org.jetbrains.kotlin",
        "composeOptions"
      ]
    }
  ]
}
